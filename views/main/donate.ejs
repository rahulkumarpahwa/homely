<% layout('/layouts/boilerplate') -%>

<div class="row mt-3">
  <div class="col-6 offset-3 donate-form">
    <h3 class="mb-3">Donation Form</h3>
    <form
      action="/homely/donate"
      class="needs-validation"
      method="post"
      novalidate
    >
      <div class="mt-2">
        <label for="name" class="form-label">Name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          required
          name="donor[name]"
        />
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mt-2">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          class="form-control"
          id="email"
          required
          name="donor[email]"
        />
      </div>

      <div class="mt-2">
        <label for="address" class="form-label">Address</label>
        <textarea
          type="text"
          class="form-control"
          id="address"
          required
          name="donor[address]"
        ></textarea>
      </div>

      <div class="mt-2">
        <div class="row">
          <div class="col-4">
            <label for="paymentMethod" class="form-label">Payment Method</label>
            <select
              class="form-select"
              id="validationDefault04"
              name="donor[paymentMethod]"
              required
            >
              <option selected disabled>Pay by...</option>
              <option>GPay</option>
              <option>PhonePe</option>
              <option>Patym</option>
              <option>UPI</option>
              <option>Card</option>
              <option>Net-Banking</option>
            </select>
          </div>

          <div class="col">
            <label for="amount" class="form-label">Amount</label>
            <input
              type="number"
              class="form-control"
              id="amount"
              required
              placeholder="&#8377;"
              min="1"
              name="donor[amount]"
            />
            <div class="valid-feedback">Looks good!</div>
          </div>
        </div>
      </div>

      <div class="col-6 mt-4">
        <button class="btn btn-dark">Donate</button>
      </div>
    </form>
  </div>
</div>

<div class="donations">
  <h3>Your Recent donations</h3>
  <div class="donation-list mx-4 mt-4">
    <div class="card text-center" style="width: 15rem">
      <div class="card-body">
        <h5 class="card-title">&#8377;15</h5>
        <p class="card-text">via <i>GPay</i></p>
        <a href="#" class="btn btn-dark">See Details</a>
      </div>
    </div>
  </div>
</div>
